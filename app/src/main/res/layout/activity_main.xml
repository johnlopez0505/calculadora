<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/principal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_pantalla"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt_pantalla"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weigth="4"
                android:text="0"
                android:textSize="50sp"
                android:textStyle="bold"
                android:background="@color/white"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_borrar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weigth= "1"
                android:background="@drawable/boton_principal"
                android:text="DEL" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botonera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="20dp">




            <Button
                android:id="@+id/boton_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="AC"/>

            <Button
                android:id="@+id/boton_sumar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="+/-"/>
            <Button
                android:id="@+id/boton_restar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="-"/>
            <Button
                android:id="@+id/boton_porcentaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="%"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botonera1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="20dp">


            <Button
                android:id="@+id/boton_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="7"/>

            <Button
                android:id="@+id/boton_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="8"/>
            <Button
                android:id="@+id/boton_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="9"/>
            <Button
                android:id="@+id/boton_multiplicar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="*"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botonera2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="20dp">


            <Button
                android:id="@+id/boton_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="4"/>

            <Button
                android:id="@+id/boton_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="5"/>
            <Button
                android:id="@+id/boton_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="6"/>
            <Button
                android:id="@+id/boton_menos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="-"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botonera3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="20dp">


            <Button
                android:id="@+id/boton_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="3"/>

            <Button
                android:id="@+id/boton_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="+2"/>
            <Button
                android:id="@+id/boton_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="1"/>
            <Button
                android:id="@+id/boton_suma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_principal"
                android:text="+"/>


        </LinearLayout>


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>